
<odoo>
  <record id="view_account_form_inherit_tipo_cliente" model="ir.ui.view">
    <field name="name">account.move.form.inherit.tipo.cliente</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_shipping_id']" position="before">
            
            <label class="" for="tipo_cliente_id"/>
            <div class="o_col">
                <field name="tipo_cliente_id"
                    readonly="1"
                    options="{'no_create': True, 'no_edit': True, 'no_delete': True,'no_open': True}"/>
            </div>
            
        </xpath>
        <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="before">
                
                <field name="discount" />
            </xpath>
    </field>
  </record>
  
    

</odoo>
