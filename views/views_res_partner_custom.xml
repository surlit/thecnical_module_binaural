<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_partner_form_inherit_tipo_cliente" model="ir.ui.view">
    <field name="name">res.partner.form.inherit.tipo.cliente</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='function']" position="before">
            <field name="tipo_cliente_id" string="Tipo de cliente" options="{'no_create': True, 'no_edit': True, 'no_delete': True,'no_open':True,}"/>
        </xpath>
    </field>
  </record>
  
</odoo>
