<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de lista (tree) -->
    <record id="view_tipo_cliente_tree" model="ir.ui.view">
        <field name="name">tipo.cliente.tree</field>
        <field name="model">tipo.cliente</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="descuento" widget="percentage"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario (opcional, si no usas editable="top") -->
    <record id="view_tipo_cliente_form" model="ir.ui.view">
        <field name="name">tipo.cliente.form</field>
        <field name="model">tipo.cliente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descuento" widget="percentage"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>