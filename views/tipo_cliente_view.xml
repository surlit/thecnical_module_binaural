<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de lista (tree) -->
    <record id="view_tipo_cliente_tree" model="ir.ui.view">
        <field name="name">tipo.cliente.tree</field>
        <field name="model">tipo.cliente</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="descuento" />
                <field name="exigir_rif" />
                <field name="active"/>
            </tree>
        </field>
    </record>

    

</odoo>